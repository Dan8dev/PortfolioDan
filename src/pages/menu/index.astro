---
import Layout from '../../layouts/Layout.astro';
import { MenuButton } from "../../components/menuBotton";

const menuOptions = [
    { href: '/about', text: 'About Me' },
    { href: '/projects', text: 'Projects' },
    { href: '/skills', text: 'Skills' },
    { href: '/proexp', text: 'Pro Exp.' }
];
---

<Layout>
    <section class="w-screen h-screen p-5">
        <div class="flex flex-col justify-evenly items-center h-full animate-fade animate-once animate-duration-[1000ms] animate-ease-linear">
            <h2 class="text-4xl lg:text-5xl xl:text-7xl text-white">MENU  <i class="nes-icon is-large star"></i></h2>
            <div class="flex flex-col justify-center items-center gap-5 md:text-xl lg:text-2xl xl:text-5xl">
                { menuOptions.map(
                    option => <MenuButton
                                    text={option.text}
                                    href={option.href}
                                    client:load
                                />
                ) }
            </div>
        </div>
    </section>
</Layout>
